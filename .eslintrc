{
  "extends": [
    "react-app",
    "standard",
    "standard-react"
  ],
  "plugins": ["markdown"],
  "globals": {
    "__DEV__"      : false,
    "__TEST__"     : false,
    "__PROD__"     : false,
    "__COVERAGE__" : false
  },
  "rules": {
    "key-spacing"          : "off",
    "jsx-quotes"           : [2, "prefer-single"],
    "max-len"              : [2, 120, 2, { "ignoreStrings": true, "ignoreTemplateLiterals": true }],
    "object-curly-spacing" : [2, "always"],
    "comma-dangle"         : "off"
  }
}
